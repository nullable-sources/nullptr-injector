div.content {
    display: inline-block;

    width: 100%;
    height: 270px;
}

div.column {
    display: inline-block;
    box-sizing: border-box;

    height: 100%;

    padding: 10px;

    vertical-align: top;
}

div.column > *:not(:last-child) { margin-bottom: 10px; }

div.group {
    display: block;
    box-sizing: border-box;

    padding: 10px;

    background-color: rgba(0, 0, 0, 70);
    border-radius: 4px;
}

div.group > *:not(:last-child) { margin-bottom: 5px; }